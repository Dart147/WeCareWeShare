---
import { Image } from "astro:assets";

import logoFooter from "../assets/icon/logo-footer.png";
import lineIcon from "../assets/icon/line.svg";
// Footer component
const currentYear = new Date().getFullYear();

interface SocialLink {
  name: string;
  href: string;
  icon: string;
}

const socialLinks: SocialLink[] = [
  { 
    name: 'Spotify', 
    href: 'https://open.spotify.com/show/2r2drOqJuUMAY2ubsHS9E7',
    icon: 'spotify'
  },
  { 
    name: 'LINE', 
    href: 'https://line.me/R/ti/p/@025uejrw',
    icon: 'line'
  },
  { 
    name: 'Facebook', 
    href: 'https://www.facebook.com/p/WE-CARE-WE-SHARE-61553863486760',
    icon: 'facebook'
  },
];

interface Partner {
  name: string;
  logo?: string;
}

const partners: Partner[] = [
  { name: '國立清華大學' },
  { name: '新竹市政府' },
  { name: 'USR-Hub' },
];
---

<footer class="bg-gray-900 text-white">
  <!-- Partners section -->
  <div class="border-b border-gray-800">
    <div class="container mx-auto px-4 py-12">
      <div class="text-center mb-8">
        <h3 class="text-lg font-medium text-gray-400 mb-2">COOPERATIVE</h3>
        <h2 class="text-2xl font-display font-bold">合作單位</h2>
      </div>
      <div class="flex flex-wrap justify-center items-center gap-8 md:gap-16">
        {partners.map((partner) => (
          <div class="text-center opacity-70 hover:opacity-100 transition-opacity">
            <div class="text-lg font-medium">{partner.name}</div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Main footer -->
  <div class="container mx-auto px-4 py-12">
    <div class="grid md:grid-cols-3 gap-8">
      <!-- Brand -->
      <div>
        <div class="flex items-center gap-3 mb-4">
          <Image src={logoFooter} alt="Logo" class="h-14 md:h-16 w-auto object-contain" />
          <div>
            <div class="font-display font-bold text-lg">童心・同享</div>
            <div class="text-sm text-gray-400">We Care We Share</div>
          </div>
        </div>
        <p class="text-gray-400 text-sm leading-relaxed">
          語言素養教育先驅 - 童心。同享 We Care We Share 國小雙語播客協作團隊
        </p>
      </div>

      <!-- Quick links -->
      <div>
        <h4 class="font-medium mb-4">快速連結</h4>
        <ul class="space-y-2 text-gray-400">
          <li><a href="/" class="hover:text-white transition-colors">首頁</a></li>
          <li><a href="/#about" class="hover:text-white transition-colors">關於我們</a></li>
          <li><a href="/news" class="hover:text-white transition-colors">最新消息</a></li>
          <li><a href="/contact" class="hover:text-white transition-colors">聯絡我們</a></li>
        </ul>
      </div>

      <!-- Social links -->
      <div>
        <h4 class="font-medium mb-4">關注我們</h4>
        <div class="flex gap-4">
          {socialLinks.map((link) => (
            <a 
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-primary transition-colors"
              aria-label={link.name}
            >
              {link.icon === 'spotify' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
                </svg>
              )}
              {link.icon === 'instagram' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              )}
              {link.icon === 'line' && (
                <Image src={lineIcon} alt="" class="w-5 h-5" aria-hidden="true" />
              )}
              {link.icon === 'facebook' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>

  <!-- Copyright -->
  <div class="border-t border-gray-800">
    <div class="container mx-auto px-4 py-6 text-center text-gray-400 text-sm">
      Copyright © {currentYear} 語言素養教育先驅 - 童心。同享 We Care We Share 國小雙語播客協作團隊
    </div>
  </div>
</footer>
