---
// Showcase page for episodes and seasons
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Episode {
  title: string;
  school: string;
  description: string;
  spotifyUrl: string;
  season: number;
  episode: number;
}

const episodes: Episode[] = [
  {
    title: 'My Favorite Food',
    school: '建功國小',
    description: '小朋友們分享他們最喜歡的食物和美味回憶',
    spotifyUrl: 'https://open.spotify.com/episode/xxx',
    season: 5,
    episode: 1,
  },
  {
    title: 'My Best Friend',
    school: '建功國小',
    description: '聽聽孩子們如何用英語介紹他們最好的朋友',
    spotifyUrl: 'https://open.spotify.com/episode/xxx',
    season: 5,
    episode: 2,
  },
  {
    title: 'My Favorite Animal',
    school: '竹蓮國小',
    description: '小朋友們分享他們最喜歡的動物',
    spotifyUrl: 'https://open.spotify.com/episode/xxx',
    season: 4,
    episode: 1,
  },
];

const seasons = [5, 4, 3, 2, 1];
---

<Layout title="成果展示 | 童心・同享 We Care We Share">
  <Header />
  <main class="pt-24 pb-20 min-h-screen bg-gray-50">
    <div class="container mx-auto px-4">
      <!-- Page header -->
      <div class="text-center mb-12">
        <span class="inline-block px-4 py-2 bg-accent-green/10 text-accent-green rounded-full text-sm font-medium mb-4">
          SHOWCASE
        </span>
        <h1 class="text-3xl md:text-4xl font-display font-bold text-gray-800 mb-4">
          成果展示
        </h1>
        <p class="text-gray-600 max-w-2xl mx-auto">
          聆聽小朋友們精彩的雙語Podcast節目
        </p>
      </div>

      <!-- Season filter -->
      <div class="flex flex-wrap justify-center gap-3 mb-12">
        <button class="px-6 py-2 bg-primary text-white rounded-full font-medium transition-colors">
          全部
        </button>
        {seasons.map((season) => (
          <button class="px-6 py-2 bg-white text-gray-600 rounded-full font-medium hover:bg-primary hover:text-white transition-colors shadow-sm">
            Season {season}
          </button>
        ))}
      </div>

      <!-- Episodes grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {episodes.map((episode) => (
          <article class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 group">
            <div class="p-6">
              <!-- Season badge -->
              <div class="flex items-center justify-between mb-4">
                <span class="px-3 py-1 bg-primary/10 text-primary text-sm rounded-full font-medium">
                  S{episode.season} E{episode.episode}
                </span>
                <span class="text-sm text-gray-500">{episode.school}</span>
              </div>

              <h2 class="text-xl font-bold text-gray-800 mb-3 group-hover:text-primary transition-colors">
                {episode.title}
              </h2>
              <p class="text-gray-600 text-sm mb-6">{episode.description}</p>

              <!-- Spotify embed placeholder -->
              <div class="bg-gradient-to-r from-green-500 to-green-600 rounded-xl p-4 text-white">
                <div class="flex items-center gap-3">
                  <svg class="w-10 h-10" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
                  </svg>
                  <div class="flex-1">
                    <div class="text-sm opacity-80">在 Spotify 收聽</div>
                    <div class="font-medium">{episode.title}</div>
                  </div>
                  <a 
                    href={episode.spotifyUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-10 h-10 bg-white/20 rounded-full flex items-center justify-center hover:bg-white/30 transition-colors"
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M8 5v14l11-7z"/>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </article>
        ))}
      </div>

      <!-- Call to action -->
      <div class="text-center mt-16">
        <div class="inline-block bg-white rounded-2xl p-8 shadow-lg">
          <h3 class="text-2xl font-bold text-gray-800 mb-4">想聽更多精彩節目？</h3>
          <p class="text-gray-600 mb-6">前往 Spotify 收聽完整的 Podcast 節目清單</p>
          <a 
            href="https://open.spotify.com/show/2r2drOqJuUMAY2ubsHS9E7"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center px-8 py-4 bg-green-500 text-white rounded-full font-semibold hover:bg-green-600 transition-all hover:scale-105"
          >
            <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
            </svg>
            在 Spotify 收聽
          </a>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>
