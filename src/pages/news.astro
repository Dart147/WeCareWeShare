// News listing page
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface NewsMeta {
  title: string;
  excerpt: string;
  date: string;
  slug: string;
  category?: string;
}

type NewsPageModule = {
  CoverImg?: ImageMetadata;
  newsMeta?: NewsMeta;
};

// Imports the /news/<slug>.astro pages so we can reuse their exported CoverImg
// (define the cover image once per post).
const newsPages = import.meta.glob<NewsPageModule>('./news/*.astro', { eager: true });


const toComparableDate = (date: string): number => {
  // Supports formats like: 2025.12.12 or 2025-12-12
  const normalized = date.replace(/\./g, '-');
  const ms = Date.parse(normalized);
  return Number.isNaN(ms) ? 0 : ms;
};

const newsItems = Object.values(newsPages)
  .map((mod) => {
    if (!mod.newsMeta) return null;
    return {
      ...mod.newsMeta,
      coverImage: mod.CoverImg,
    };
  })
  .filter(Boolean)
  .sort((a, b) => toComparableDate(b!.date) - toComparableDate(a!.date));
